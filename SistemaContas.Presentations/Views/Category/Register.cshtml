@model SistemaContas.Presentations.Models.CategoryRegisterModel

@{
    ViewData["Title"] = "Cadastro Categoria";

    Layout = "~/Views/Shared/MainLayout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="text-center">
        <h3>Cadastro de Categoria</h3>
    </div>

    <div class="mb-2">
        <div class="row">
            <div class="col-md-6">
                <label><strong>Nome da Categoria:</strong></label>
                @Html.TextBoxFor(x => x.Name, new {@class="form-control", placeholder="Digite um nome para sua categoria."})
                <span class="text-danger">
                    @Html.ValidationMessageFor(x => x.Name)
                </span>
            </div>
        </div>

    </div>

    <div class="mb-2 row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-6">
                    <a href="/Dashboard/Index" class="btn btn-danger text-decoration-none">Cancelar</a>

                </div>
                <div class="col-md-6 text-end">
                    <input type="submit" value="Salvar" class="btn btn-dark" />

                </div>
            </div>
        </div>
    </div>
}
