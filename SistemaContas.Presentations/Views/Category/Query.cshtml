@model List<SistemaContas.Presentations.Models.CategoryQueryModel>

@{
    ViewData["Title"] = "Consultar Categoria";

    Layout = "~/Views/Shared/MainLayout.cshtml";
}

@if(Model.Count > 0)
{
    <div class="table-responsive" style="background-color:lightyellow">
        <table class="table table-hover grid_datatable">
            <thead class="table-dark">
                <tr>
                    <th>
                        Categorias Cadastradas
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td class="text-black text-center">
                            <a href="" class="btn btn-outline-warning btn-sm">
                                Editar
                            </a>

                            <a href="" class="btn btn-outline-danger btn-sm">
                                Excluir
                            </a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
}
else
{
    <h3 class="text-center">Você ainda não possui categorias cadastradas.</h3>
}
