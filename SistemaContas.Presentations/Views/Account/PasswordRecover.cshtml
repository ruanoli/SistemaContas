@model SistemaContas.Presentations.Models.AccountPasswordRecoverModel

@{
    Layout = "~/Views/Shared/AccountLayout.cshtml";
}

<div class="row mt-5">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-body">
                <div class="text-center">
@*                    <h1>Sistema de Contas</h1>
*@
                    <h3>Recuperar Senha</h3>

                    <hr />

                    @using (Html.BeginForm())
                    {
                        <div class="input-group mb-2">
                            <span class="input-group-text" id="basic-addon1">Entre com seu E-mail:</span>                        
                            @Html.TextBoxFor(x => x.Email, new {@class="form-control", placeholder="Digite seu e-mail..."})
                            <span class="text-danger">
                                @Html.ValidationMessageFor(x => x.Email)
                            </span>
                        
                        </div>

                        <div class="mb-2 d-grid">
                            <input type="submit" value="Confirmar" class="btn btn-dark" />
                        </div>

                        <div class="mb-2 d-grid">
                            <a href="/Account/Login" class="text-decoration-none btn btn-warning">
                                Já possui conta? <strong>Acesse aqui!</strong>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
